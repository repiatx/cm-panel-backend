# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2
tab_width = 2

[*.yaml]
indent_size = 2
tab_width = 2

[*.yml]
indent_size = 2
tab_width = 2

[*.js]
indent_size = 2
tab_width = 2
cpp_space_remove_around_unary_operator = true
